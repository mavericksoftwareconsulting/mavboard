{{!< layout}}

<section class="grid-container">
  <script type="text/javascript" src="/javascript/index.js"></script>

  <section class='grid-item section1'>
    <h1>{{title}}</h1>
      <div id='theme-picker'>
        <a onclick="changeTheme('default')" id='light-theme' class="current-theme"><b>Light</b></a>
        <a onclick="changeTheme('dark')" id='dark-theme'><b>Dark</b></a>
        <a onclick="changeTheme('colorful')" id='colorful-theme'><b>Colorful</b></a>
      </div>
    <hr>
  </section>

  <section class='spotify grid-item section2'>
    <div class="spotify-header-row">
      <a onclick="toggleSpotifyDiv()" id="toggle-list-link">Toggle List</a>
      <a onclick="toggleSearch()" id="toggle-search-link">Search</a>
    </div>
    <div id="spotify-info-container" class="active">
      <img id='current-track-image' alt='spotify album art' src="../imgs/test_image.jpg">

      <p id='currSong'>No Song Currently Playing</p>
    </div>
    
    <div id="spotify-interative-list-container" class="hidden">
      <ul id="ilist-ul"></ul>
    </div>

    <div id="spotify-search-container" class="hidden">
      <form id="search-form" onsubmit="searchSpotify(event)">
        <input type="search" id="query" name="query" placeholder="Search Spotify">
      </form>
      <div id='search-results'>
        <ul id='search-results-list'></ul>
      </div>
    </div>
  </section>

  <section class='grid-item section3 info-fields'>
    <h3 id="office-info-header">Office Info</h3>

    <div class="message">
      <p>Office Phone: 651-294-1111</p>
