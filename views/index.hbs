  </section>

  <section class='grid-item section5 info-fields'>
    <p>7 Day Forecast</p>
  </section>

  <section class='grid-item section6 spot-buttons'>
    <img id='sptPrvBtn' class="cursor-hover" src='../imgs/skip-back.svg' onclick="window.music.sptPreviousTrack()">
  </section>

  <section class='grid-item section7 spot-buttons'>
    <img id='sptPlayBtn' class='cursor-hover' src='../imgs/play-circle.svg' onclick="window.music.sptPlay()">
